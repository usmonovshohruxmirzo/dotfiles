set nocompatible
filetype off

set number
set relativenumber

set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent

set clipboard=unnamedplus
set mouse=a
set cursorline

set ignorecase
set smartcase
set incsearch
set hlsearch

set termguicolors
syntax on
filetype plugin indent on

set splitbelow
set splitright

set updatetime=300
set timeoutlen=500

set laststatus=2
set statusline=%F\ %y\ %m\ %r\ %=Line:%l/%L\ Col:%c
